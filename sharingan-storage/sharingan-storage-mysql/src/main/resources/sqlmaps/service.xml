<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.moyada.sharingan.storage.mysql.dao.ServiceDAO">

	<resultMap id="serviceDO" type="cn.moyada.sharingan.storage.api.domain.ServiceDO">
		<id column="id" property="id"/>
		<result column="app_id" property="appId"/>
		<result column="name" property="name"/>
		<result column="protocol" property="protocol"/>
		<result column="class_name" property="className"/>
	</resultMap>

	<sql id="baseColumn">
		`id`, `app_id`, `name`, `protocol`, `class_name`
	</sql>

	<insert id="save">
		INSERT INTO `service_info`
		 (<include refid="baseColumn"/>)
		VALUES
		(NULL, #{appId}, #{name}, #{protocol}, #{className});
	</insert>

	<select id="findByApp" resultMap="serviceDO">
		SELECT <include refid="baseColumn"/> FROM `service_info`
		WHERE app_id = #{appId}
	</select>

	<select id="findById" resultMap="serviceDO">
		SELECT <include refid="baseColumn"/> FROM `service_info`
		WHERE id = #{serviceId} LIMIT 1;
	</select>
</mapper>