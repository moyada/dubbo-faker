<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.moyada.sharingan.repository.mysql.dao.ServiceDAO">

	<resultMap id="serviceData" type="io.moyada.sharingan.domain.metadada.ServiceData">
		<id column="id" property="id"/>
		<result column="name" property="name"/>
		<result column="protocol" property="protocol"/>
		<result column="protocol_type" property="protocolType"/>
		<result column="class_name" property="classType"/>
	</resultMap>

	<sql id="baseColumn">
		`id`, `app_id`, `name`, `protocol`, `protocol_type`, `class_name`
	</sql>

	<insert id="save">
		INSERT INTO `service_info`
		 (<include refid="baseColumn"/>)
		VALUES
		(NULL, #{appId}, #{name}, #{protocol}, #{protocolType}, #{classType});
	</insert>

	<select id="findByApp" resultMap="serviceData">
		SELECT <include refid="baseColumn"/> FROM `service_info`
		WHERE app_id = #{appId}
	</select>

	<select id="findById" resultMap="serviceData">
		SELECT <include refid="baseColumn"/> FROM `service_info`
		WHERE id = #{serviceId} LIMIT 1;
	</select>
</mapper>