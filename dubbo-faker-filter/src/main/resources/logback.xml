<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="${catalina.base}/logs"/>

    <property name="pattern" value="%d{HH:mm:ss} %highlight(%-5p) %green([%replace(%caller{1}){'(Caller\\\+0\\\s*at.)|\\\(.*java|\r|\n|\\\)', ''}]) %m%n"/>

    <property name="date" value="%d{yyyy-MM-dd}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <appender name="FAKER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/faker.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/faker_${date}.log.%i.gz</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>20MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <logger name="cn.moyada.dubbo.faker.filter" level="info" additivity="false">
        <appender-ref ref="FAKER" />
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>